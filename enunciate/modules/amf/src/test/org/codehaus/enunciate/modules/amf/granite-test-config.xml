<granite-config>
    <externalizers>
        <externalizer type="org.codehaus.enunciate.modules.amf.MyBeanExternalizer">
            <include instanceof="org.codehaus.enunciate.modules.amf.MyBean" />
        </externalizer>

        <externalizer type="org.codehaus.enunciate.modules.amf.externalizers.DataHandlerExternalizer">
            <include instanceof="javax.activation.DataHandler" />
        </externalizer>

        <externalizer type="org.codehaus.enunciate.modules.amf.externalizers.URIExternalizer">
            <include instanceof="java.net.URI" />
        </externalizer>

        <externalizer type="org.codehaus.enunciate.modules.amf.externalizers.UUIDExternalizer">
            <include instanceof="java.util.UUID" />
        </externalizer>

        <externalizer type="org.granite.messaging.amf.io.util.externalizer.EnumExternalizer">
            <include instanceof="java.lang.Enum" />
        </externalizer>
    </externalizers>
</granite-config>
