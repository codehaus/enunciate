<enunciate>
  <modules>
    <docs>
      <war docsDir="docs"/>
    </docs>
    <spring-app enableSecurity="true">

      <springImport file="sparklr-beans.xml"/>

      <security enableBasicHTTPAuth="false"
                enableFormBasedLogin="true"
                enableFormBasedLogout="true"
                enableOAuth="true">

        <formBasedLogin url="/login.do" loginPageFile="src/main/webapp/login.jsp"/>
        <formBasedLogout url="/logout.do"/>

        <onAuthenticationFailed redirectTo="/login.jsp"/>
      </security>
      
    </spring-app>
  </modules>
</enunciate>
