<project>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.enunciate</groupId>
  <artifactId>enunciate-core-tools</artifactId>
  <version>@VERSION@</version>

  <dependencies>

    <dependency>
      <!--this dependency doesn't have anything to do with xfire.  It's just xfire's build of the jsr181 annotations.-->
      <groupId>xfire</groupId>
      <artifactId>xfire-jsr181-api</artifactId>
      <version>1.0-M1</version>
    </dependency>

    <dependency>
      <groupId>javax.xml.ws</groupId>
      <artifactId>jaxws-api</artifactId>
      <version>2.0</version>
      <exclusions>
        <exclusion>
          <!--we're going to explicitly depend on jaxb below.-->
          <groupId>javax.xml.bind</groupId>
          <artifactId>jaxb-api</artifactId>          
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <!--Starting with JDK 1.6, JAXB (along with activation) is shipped with the JDK.-->
      <activation>
        <jdk>1.5-</jdk>
      </activation>
      <dependencies>
        <dependency>
          <groupId>javax.activation</groupId>
          <artifactId>activation</artifactId>
          <version>1.1</version>
        </dependency>
        <dependency>
          <groupId>javax.xml.bind</groupId>
          <artifactId>jaxb-api</artifactId>
          <version>2.0</version>
          <exclusions>
            <exclusion>
              <!--We'll explicitly depend on Enunciate's version of activation. Not JAXB's.-->
              <groupId>javax.activation</groupId>
              <artifactId>activation</artifactId>
            </exclusion>
            <exclusion>
              <groupId>javax.xml.bind</groupId>
              <artifactId>jsr173_api</artifactId>
            </exclusion>
            <exclusion>
              <groupId>javax.xml</groupId>
              <artifactId>jsr173</artifactId>
            </exclusion>
          </exclusions>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>