<?xml version="1.0" encoding="UTF-8"?>

<project default="deploy" name="docs" basedir=".">

  <import file="../../build-module.xml"/>

  <property name="deployment.module.fqn" value="org.codehaus.enunciate.modules.docs.DocumentationDeploymentModule"/>

  <target name="get-test-sysprops">
    <property name="in.apt.src.test.dir" value="${basedir}/src/samples/docs"/>
    <pathconvert property="apt.test.class.path" pathsep="${path.separator}" dirsep="${file.separator}" refid="build.classpath"/>

    <propertyset id="test.sysprops">
      <propertyref name="in.apt.src.test.dir"/>
      <propertyref name="apt.test.class.path"/>
    </propertyset>
  </target>

  <target name="jar" depends="zip-default-base, base.jar"/>

  <target name="zip-default-base">
    <mkdir dir="${build.dir}"/>
    
    <zip destfile="${build.dir}/docs.base.zip" basedir="template">
      <exclude name="*.html"/>
    </zip>
  </target>

</project>
